  <comment>2020-07-26 | Hiro Odaka</comment>
  <auto_position flag="0" />
  <sensitive_detector_not_found_warning flag="1" />
  <data>
    <sensitive_detector type="2DPixel" name="LArBox.log">
      <common>
        <parameters>
          <upside anode="1" pixel="1" />
          <depth_sensing mode="1" resolution="0.1" />
          <quenching factor="0.6" />
          <temperature value="255.0" />
          <charge_collection mode="0" />
          <diffusion mode="0">
            <spread_factor cathode="2.0" anode="1.5" />
          </diffusion>
          <channel_properties>
            <disable status="0" />
            <noise_level param0="5.0" param1="0.5" param2="0.0" />
            <compensation factor="1.0" />
            <threshold value="25.0" />
          </channel_properties>
          <reconstruction mode="1" />
        </parameters>
      </common>
      <detector_list id_method="path" layer_offset="1">
        <detector id="1" path="LArBox" />
      </detector_list>
    </sensitive_detector>
  </data>
</detector_parameters>
