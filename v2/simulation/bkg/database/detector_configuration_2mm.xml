<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="https://raw.githubusercontent.com/odakahirokazu/ComptonSoft/master/xmlstyle/detector_configuration_v5.xsl" ?>

<configuration>
  <name>LArBox detector</name>
  <comment>2020-07-26 | Hirokazu Odaka</comment>
  <length_unit>cm</length_unit>
  <detectors>
    <detector id="1" type="2DPixel" name="Sensor:1">
      <geometry x="140.0" y="140.0" z="20.0" />
      <offset x="0.0" y="0.0" />
      <pixel number_x="700" number_y="700" size_x="0.2" size_y="0.2" />
      <position x="0.0" y="0.0" z="0.0" />
      <xaxis_direction x="+1.0" y="0.0"  z="0.0" />
      <yaxis_direction x="0.0"  y="+1.0" z="0.0" />
      <energy_priority electrode_side="anode" />
    </detector>
  </detectors>
  <readout />
  <groups>
    <group name="Any">
      <detector id="1" />
    </group>
    <hit_pattern name="1hit" short_name="1hit" bit="0">
      <group name="Any" />
    </hit_pattern>
    <hit_pattern name="2hit" short_name="2hit" bit="1">
      <group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="3hit" short_name="3hit" bit="2">
      <group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="4hit" short_name="4hit" bit="3">
      <group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="5hit" short_name="5hit" bit="4">
      <group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="6hit" short_name="6hit" bit="5">
      <group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="7hit" short_name="7hit" bit="6">
      <group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
    <hit_pattern name="8hit" short_name="8hit" bit="7">
      <group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" /><group name="Any" />
    </hit_pattern>
  </groups>
</configuration>
